@page
@model sso_authentication.Pages.SecureModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
<div class="container mt-5">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h1 class="mb-0">USER DATA</h1>
    </div>
    <div class="card-body">
      @if (Model.SessionModel != null && Model.SessionModel.Claims != null) {
      <h3>CLAIMS</h3>
      <dl class="row">
        @foreach (var claim in Model.SessionModel.Claims)
        {
          <dt class="col-sm-3">@claim.Type</dt>
          <dd class="col-sm-9">@claim.Value</dd>
        }
      </dl>
      }
      @if (Model.SessionModel != null && Model.SessionModel.Metadata != null) {
        <h3>METADATA</h3>
        <dl class="row">
          @foreach (var metadata in Model.SessionModel.Metadata)
          {
            <dt class="col-sm-3">@metadata.Key</dt>
            <dd class="col-sm-9">@metadata.Value</dd>
          }
      </dl>
      }
    </div>
    <div class="card-footer">
      <form method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Log out</button>
      </form>
    </div>
  </div>
</div>

@{
}
